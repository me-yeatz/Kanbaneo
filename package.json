{
  "name": "kanbaneo",
  "version": "1.0.0",
  "description": "A beautiful glassmorphism-styled Kanban board with AI-powered task suggestions",
  "main": "electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/me-yeatz/Kanbaneo.git"
  },
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "build:ios": "npx cap sync ios",
    "build:android": "npx cap sync android",
    "cap:init": "npx cap init Kanbaneo com.yeatz.kanbaneo --web-dir .",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:sync": "npx cap sync"
  },
  "build": {
    "appId": "com.yeatz.kanbaneo",
    "productName": "Kanbaneo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "styles.css",
      "script.js",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "kanban",
    "task-management",
    "productivity",
    "glassmorphism",
    "electron",
    "capacitor"
  ],
  "author": "yeatz",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^5.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@capacitor/android": "^5.6.0",
    "@capacitor/core": "^5.6.0",
    "@capacitor/ios": "^5.6.0",
    "@capacitor/splash-screen": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6"
  }
}